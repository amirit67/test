<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/colorAccent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:elevation="0dp"
            app:contentScrim="?attr/colorAccent"
            android:background="@color/colorAccent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlways"
            app:titleEnabled="false"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="center"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                android:layout_marginTop="@dimen/dp60"
                android:layout_below="@+id/toolbar">

                <com.github.islamkhsh.CardSliderViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:auto_slide_time="-1"
                    app:cardSlider_baseShadow="@dimen/dp8"
                    app:cardSlider_cardCornerRadius="5dp"
                    app:cardSlider_otherPagesWidth="6dp"
                    app:cardSlider_pageMargin="8dp"
                    app:cardSlider_smallScaleFactor="0.6"
                    android:layout_gravity="center"
                    app:cardSlider_indicator="@id/indicator"/>

                <com.github.islamkhsh.CardSliderIndicator
                    android:layout_width="@dimen/dp100"
                    android:layout_height="25dp"
                    android:id="@+id/indicator"
                    android:layout_gravity="center_horizontal"
                    app:indicatorsToShow="5" />

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                android:layout_gravity="top"
                android:background="#D9EEF2F6"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/img_back"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@android:color/transparent"
                    card_view:srcCompat="@drawable/ic_back" />

                <ir.payebash.Moudle.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right" />

                <TextView
                    android:id="@+id/txt_fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="right|center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:padding="6dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp14" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/dp8"
                    card_view:srcCompat="@drawable/ic_share" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_fav"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/dp8"
                    card_view:srcCompat="@drawable/ic_bookmark_white" />

            </androidx.appcompat.widget.Toolbar>

           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:background="@drawable/item_devider_vertical_green" />-->

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include3"
        layout="@layout/content_post_details" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/cpv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp160"
        wheel:matProg_barColor="#000"
        wheel:matProg_barWidth="1dp"
        wheel:matProg_fillRadius="true"
        wheel:matProg_progressIndeterminate="true"
        wheel:matProg_spinSpeed="0.75" />

    <Button
        android:id="@+id/btn_beup"
        style="@style/RegButton"
        android:layout_gravity="bottom"
        android:background="#5bb85d"
        android:text="پایه ام"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp15"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
