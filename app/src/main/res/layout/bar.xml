<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left|start"
    android:minWidth="13dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:fontFamily="@font/yekanmedium"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:textColor="#333333"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView90"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_solid_gray_full"
        app:layout_constraintBottom_toBottomOf="@+id/linear_bar"
        app:layout_constraintEnd_toStartOf="@+id/text_view_raters"
        app:layout_constraintStart_toStartOf="@+id/linear_bar"
        app:layout_constraintTop_toTopOf="@+id/linear_bar" />

    <LinearLayout
        android:id="@+id/linear_bar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_raters"
        app:layout_constraintStart_toEndOf="@+id/text_view_bar_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_raters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/yekanmedium"
        android:paddingStart="2dp"
        android:paddingLeft="2dp"
        android:textColor="#333333"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
