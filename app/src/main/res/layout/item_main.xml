<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linear_rounded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp">

                    <ir.payebash.Moudle.TriangleLabelView
                        android:id="@+id/lbl_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:backgroundColor="@color/blue_btn_bg_color"
                        app:corner="leftTop"
                        app:labelBottomPadding="@dimen/dp4"
                        app:labelCenterPadding="0dp"
                        app:labelTopPadding="@dimen/dp16"
                        app:primaryText="بانوان"
                        app:primaryTextColor="@android:color/white"
                        app:primaryTextSize="@dimen/sp11" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img_post"
                        android:layout_toStartOf="@+id/img_post"
                        android:layout_weight="0.70"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_weight="1"
                            android:drawablePadding="5dp"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:maxLines="2"
                            android:paddingRight="8dp"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="5"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/txt_cost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:drawablePadding="8dp"
                            android:gravity="right|center_vertical"
                            android:paddingRight="8dp"
                            android:textColor="#5EAB43"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/txt_deadline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="8dp"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:paddingRight="8dp"
                            android:textColor="#18ADB5"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/txt_loc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="8dp"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:paddingRight="8dp"
                            android:textColor="#d73436"
                            android:textSize="@dimen/sp12" />

                    </LinearLayout>

                    <ir.payebash.Moudle.CircleImageView
                        android:id="@+id/img_post"
                        android:layout_width="@dimen/dp95"
                        android:layout_height="@dimen/dp95"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_paye"
                        android:transitionName="trans" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:id="@+id/mTagLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:paddingTop="3dp">


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>