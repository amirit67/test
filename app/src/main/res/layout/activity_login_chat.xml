<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.LoginActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cloudlogo"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerHorizontal="true"
                android:padding="15dp"
                android:src="@drawable/avatar_circle" />

            <TextView
                android:id="@+id/txtcloudgallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cloudlogo"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Chat.Mobile"
                android:textAlignment="center"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/editUsername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/txtcloudgallery"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bordered_textbox"
                android:focusableInTouchMode="true"
                android:gravity="left|center_vertical"
                android:hint="Username"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:textColor="#777" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editUsername"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bordered_textbox"
                android:focusableInTouchMode="true"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="12dp"
                android:textColor="#777" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editPassword"
                android:layout_marginBottom="20dp"
                android:background="#5D8A9E"
                android:text="Sign In"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnShowRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/editPassword"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:text="Don't have an Account?"
                android:textAllCaps="false"
                android:textColor="#2A6496"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
