<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txt1"
        android:background="@drawable/item_devider_horizontal" />

    <ir.payebash.Moudle.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view4"
        android:layout_gravity="right"
        android:layout_margin="@dimen/dp4"
        android:src="@mipmap/ic_paye" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yekanmedium"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:layout_toLeftOf="@+id/img_profile"
        android:layout_toStartOf="@+id/img_profile"
        android:layout_weight="0.5"
        android:gravity="right|center_vertical"
        android:textDirection="anyRtl"
        android:layoutDirection="rtl"
        android:inputType="textMultiLine"
        android:padding="@dimen/dp6"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp12" />
</RelativeLayout>

