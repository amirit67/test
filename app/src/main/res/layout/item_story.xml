<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rootView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:clickable="true"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <ir.payebash.utils.roundedimageview.InsLoadingView
        android:id="@+id/img_story"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layoutDirection="ltr"
        app:status="unclicked"
        app:start_color="@color/white"
        app:end_color="@color/black"
        android:src="@mipmap/ic_paye"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:fontFamily="@font/yekanregular"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="امیر خدابنده" />

</LinearLayout>