<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:layoutDirection="ltr"
    android:padding="5dp">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="چطور جایی باشه"
        android:textColor="@color/black"
        android:fontFamily="@font/yekanlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="هزینش چطور باشه؟"
        android:textColor="@color/black"
        android:fontFamily="@font/yekanlight"
        android:textSize="@dimen/sp12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <ir.payebash.utils.roundedimageview.ToggleButtonGroupTableLayout
        android:id="@+id/radGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TableRow android:gravity="center">

            <RadioButton
                android:id="@+id/rad2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/checkbox_background"
                android:button="@null"
                android:buttonTint="@drawable/radio_color"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:padding="@dimen/dp8"
                android:text="پولی"
                android:textColor="@drawable/radio_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rad1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/checkbox_background"
                android:button="@null"
                android:buttonTint="@drawable/radio_color"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:padding="@dimen/dp8"
                android:text="رایگان"
                android:textColor="@drawable/radio_color"
                android:textSize="14sp"
                android:checked="true"/>
        </TableRow>

    </ir.payebash.utils.roundedimageview.ToggleButtonGroupTableLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="شرکت کنندگانش"
        android:textColor="@color/black"
        android:fontFamily="@font/yekanlight"
        android:textSize="@dimen/sp12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radGroup" />

    <ir.payebash.utils.roundedimageview.ToggleButtonGroupTableLayout
        android:id="@+id/radGroup2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <TableRow
            android:gravity="center">

            <RadioButton
                android:id="@+id/rad3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:padding="@dimen/dp8"
                android:background="@drawable/checkbox_background"
                android:button="@null"
                android:buttonTint="@drawable/radio_color"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="فرقی ندارد"
                android:checked="true"
                android:textColor="@drawable/radio_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rad4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:padding="@dimen/dp8"
                android:background="@drawable/checkbox_background"
                android:button="@null"
                android:buttonTint="@drawable/radio_color"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="آقایان"
                android:textColor="@drawable/radio_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rad5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:padding="@dimen/dp8"
                android:button="@null"
                android:buttonTint="@drawable/radio_color"
                android:gravity="center"
                android:background="@drawable/checkbox_background"
                android:layoutDirection="rtl"
                android:text="بانوان"
                android:textColor="@drawable/radio_color"
                android:textSize="14sp" />
        </TableRow>

    </ir.payebash.utils.roundedimageview.ToggleButtonGroupTableLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="کجا باشه؟"
        android:textColor="@color/black"
        android:fontFamily="@font/yekanlight"
        android:textSize="@dimen/sp12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radGroup2" />

</androidx.constraintlayout.widget.ConstraintLayout>