<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corners_top"
    android:layoutDirection="ltr"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.PostDetailsActivity"
    tools:showIn="@layout/activity_post_details">

    <LinearLayout
        android:id="@+id/ll_advertisdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp4"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include layout="@layout/dialog_post_manage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ir.payebash.Moudle.TriangleLabelView
                        android:id="@+id/lbl_is_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:backgroundColor="@color/blue_btn_bg_color"
                        app:corner="leftTop"
                        app:labelBottomPadding="@dimen/dp4"
                        app:labelCenterPadding="0dp"
                        app:labelTopPadding="@dimen/dp28"
                        app:primaryText="فقط بانوان"
                        app:primaryTextColor="@android:color/white"
                        app:primaryTextSize="@dimen/sp13" />

                    <TextView
                        android:id="@+id/txt_event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp6"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/sp16"
                        android:fontFamily="@font/yekanbold"/>

                    <TextView
                        android:id="@+id/txt_event_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_event_title"
                        android:padding="@dimen/dp6"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginRight="@dimen/dp4"
                android:background="@color/gray2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp4"
                android:layout_marginTop="@dimen/dp8"
                android:layout_weight="1"
                android:background="@drawable/post_details_header"
                android:gravity="center"
                android:paddingBottom="@dimen/dp4"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp4"
                android:text="اطلاعات اصلی"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/ll_baseProperty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/post_details_border"
                android:gravity="right"
                android:inputType="textMultiLine"
                android:padding="6dp"
                android:text="پایه ها : "
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp13" />

            <ir.payebash.Moudle.TagLayoutImageView
                android:id="@+id/tl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ir.payebash.Moudle.TagLayoutImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_report"
                    style="@style/RegButton"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="گزارش خطا" />

                <Button
                    android:id="@+id/btn_advertiser"
                    style="@style/RegButton"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="پروفایل" />

                <Button
                    android:id="@+id/btn_contactWays"
                    style="@style/RegButton"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="تماس" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_alignParentBottom="true"
                    android:clickable="true"
                    android:enabled="true"
                    android:visibility="gone"
                    map:uiRotateGestures="true"
                    map:uiScrollGestures="true"
                    map:uiTiltGestures="true"
                    map:uiZoomGestures="true" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/include"
            android:layout_margin="@dimen/dp4"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btn_sendComment"
                    android:layout_toStartOf="@+id/btn_sendComment"
                    android:layout_weight="1"
                    android:background="#ededed"
                    android:gravity="right|center_vertical"
                    android:hint="نظر خود را بنویسید"
                    android:inputType="textMultiLine"
                    android:maxLength="140"
                    android:maxLines="3"
                    android:padding="@dimen/dp4"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/sp13" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_sendComment"
                    style="@style/RegButton"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    card_view:srcCompat="@drawable/ic_send" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="right"
                android:cacheColorHint="#ffffff"
                android:divider="@null"
                android:dividerHeight="5dp"
                android:padding="5dp"
                android:scrollbars="vertical" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="75dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
